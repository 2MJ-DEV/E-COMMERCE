{
  "info": {
    "name": "Market Fresh API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{host}}/login",
              "host": ["{{host}}"],
              "path": ["login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@marketfresh.com\",\n  \"role\": \"admin\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.token) {",
                  "  pm.collectionVariables.set('token', json.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Protected",
      "item": [
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{host}}/me",
              "host": ["{{host}}"],
              "path": ["me"]
            }
          }
        },
        {
          "name": "Admin",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{host}}/admin",
              "host": ["{{host}}"],
              "path": ["admin"]
            }
          }
        },
        {
          "name": "Superadmin (alias)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{host}}/superadmin",
              "host": ["{{host}}"],
              "path": ["superadmin"]
            }
          }
        },
        {
          "name": "Seller",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{host}}/seller",
              "host": ["{{host}}"],
              "path": ["seller"]
            }
          }
        },
        {
          "name": "Fournisseur (alias)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{host}}/fournisseur",
              "host": ["{{host}}"],
              "path": ["fournisseur"]
            }
          }
        },
        {
          "name": "Client",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{host}}/client",
              "host": ["{{host}}"],
              "path": ["client"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "host",
      "value": "http://localhost:4000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
